@page
@model ApproveModel
@{
    ViewData["Title"] = "Approve Expenses";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Approve Expenses</h3>
        </div>
        <div class="card-body">
            <h5>Pending expenses:</h5>
            
            <form method="get" class="mb-3">
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">Filter:</label>
                        <input type="text" name="filter" class="form-control" value="@Model.FilterText" placeholder="Search pending expenses..." />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-secondary">Filter</button>
                    </div>
                </div>
            </form>
            
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expense in Model.PendingExpenses)
                        {
                            <tr>
                                <td>@expense.Date.ToString("dd/MM/yyyy")</td>
                                <td>@expense.Category</td>
                                <td>Â£@expense.Amount.ToString("N2")</td>
                            </tr>
                        }
                        @if (!Model.PendingExpenses.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center">No pending expenses</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3">
                <button type="button" class="btn btn-secondary" onclick="alert('Approve functionality - would approve selected expenses')">Approve</button>
            </div>
        </div>
    </div>
    
    <div class="mt-3">
        <a href="/Index" class="btn btn-link">Add Expense</a> | 
        <a href="/Expenses" class="btn btn-link">View All Expenses</a> |
        <a href="/swagger" class="btn btn-link">API Documentation</a>
    </div>
</div>
