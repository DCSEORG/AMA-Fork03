@page
@model IndexModel
@{
    ViewData["Title"] = "Add Expense";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Expense Management System</h3>
                </div>
                <div class="card-body">
                    <h4>Add Expense</h4>
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="NewExpense.Amount" class="form-label">Amount:</label>
                            <input asp-for="NewExpense.Amount" class="form-control" type="number" step="0.01" />
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="NewExpense.Date" class="form-label">Date:</label>
                            <input asp-for="NewExpense.Date" class="form-control" type="date" />
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="NewExpense.Category" class="form-label">Category:</label>
                            <select asp-for="NewExpense.Category" class="form-select">
                                <option value="Travel">Travel</option>
                                <option value="Food">Food</option>
                                <option value="Office Supplies">Office Supplies</option>
                                <option value="Transport">Transport</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="NewExpense.Description" class="form-label">Description:</label>
                            <textarea asp-for="NewExpense.Description" class="form-control" rows="4"></textarea>
                        </div>
                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-secondary px-4">Submit</button>
                        </div>
                    </form>
                    
                    @if (Model.SubmitSuccess)
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            Expense submitted successfully!
                        </div>
                    }
                </div>
            </div>
            
            <div class="mt-3">
                <a href="/Expenses" class="btn btn-link">View All Expenses</a> | 
                <a href="/Approve" class="btn btn-link">Approve Expenses</a> |
                <a href="/swagger" class="btn btn-link">API Documentation</a>
            </div>
        </div>
    </div>
</div>
